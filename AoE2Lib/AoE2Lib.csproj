<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	  <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.13.0" />
    <PackageReference Include="Grpc" Version="2.33.1" />
    <PackageReference Include="Grpc.Tools" Version="2.33.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Reloaded.Injector" Version="1.2.4" />
  </ItemGroup>

	<ItemGroup>
		<Protobuf Include="**/*.proto" OutputDir="" CompileOutputs="false" GrpcServices="Client" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="aimodule-aoc-verbose-debug.dll" />
	  <None Remove="aimodule-aoc.dll" />
	  <None Remove="aimodule-de.dll" />
	  <None Remove="grpc_csharp_ext.x64.dll" />
	  <None Remove="grpc_csharp_ext.x86.dll" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="aimodule-aoc-verbose-debug.dll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="aimodule-aoc.dll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="aimodule-de.dll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="grpc_csharp_ext.x64.dll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="grpc_csharp_ext.x86.dll">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<ItemGroup>
	  <NativeLibs Remove="aimodule-aoc.dll" />
	</ItemGroup>

	<ItemGroup>
	  <NativeLibs Remove="aimodule-de.dll" />
	</ItemGroup>

	<ItemGroup>
	  <NativeLibs Remove="aimodule-aoc-verbose-debug.dll" />
	</ItemGroup>

</Project>
